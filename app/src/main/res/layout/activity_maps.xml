<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <fragment
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <com.example.materialsearchbar.MaterialSearchView
        android:id="@+id/material_search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:back_icon="@drawable/ic_back"
        app:clear_icon="@drawable/ic_clear"
        app:search_icon="@drawable/ic_search"
        app:voice_icon="@drawable/ic_voice"
        app:hint="@string/places_autocomplete_search_hint"
        app:card_content_background="@drawable/material_search_view_background"
        android:elevation="1dp"
        />

</FrameLayout>
